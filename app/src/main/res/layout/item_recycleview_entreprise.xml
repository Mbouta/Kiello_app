<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="@dimen/spacing_large"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <!-- ======== Layout ImageView use for Display Logo Image(png extension) ======== -->
        <ImageView
            android:id="@+id/imageVEntreprise"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerInside"
            android:background="@color/grey_5"
            android:src="@drawable/logo_arpce"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- ======== Layout TextView1 use for Displaying Name ======= -->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nom :"
                android:fontFamily="monospace"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:maxLines="1"
                android:textColor="@color/amber_900"/>

            <!-- ========= Layout TextView2 use for Displaying Categorie ====== -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:text="Categorie :"
                android:maxLines="1"/>

            <!-- ========= Layout TextView3 use for Displaying Adresse ======== -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse :"
                android:maxLines="1"/>

            <!-- ========= Layout TextView4 use for Displaying Ville ======= -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville :"
                android:maxLines="1"/>

            <!-- ========= TextView5 use for Displaying BP(Boite Postal)-->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BP :"
                android:maxLines="1"/>
<!--
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date de Creation :" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Boite Postal :" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Description :" />-->

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>






